<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewHomeAlarmContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Up_Down_Margin"
        android:text="TextView"
        android:textSize="@dimen/Big_Text_Size" />

    <TextView
        android:id="@+id/textViewHomeAlarmDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Detail_Padding"
        android:layout_marginBottom="@dimen/Up_Down_Margin"
        android:text="TextView"
        android:textColor="@color/Writing_Color"
        android:textSize="@dimen/Medium_Text_Size" />
</LinearLayout>
</layout>