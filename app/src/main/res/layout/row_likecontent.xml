<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/Side_Padding"
        android:paddingRight="@dimen/Side_Padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Up_Down_Margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCommmunityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewCommunityTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/Writing_Color"
                android:textSize="@dimen/Small_Text_Size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Detail_Padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCommnunityContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="TextView"
                android:textSize="@dimen/Medium_Text_Size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/Detail_Padding"
            android:layout_marginBottom="@dimen/Up_Down_Margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCommunityProfile"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    app:srcCompat="@drawable/profile" />

                <TextView
                    android:id="@+id/textViewCommunityNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textViewCommunityAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textColor="@color/Writing_Color"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textViewCommunityTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/Writing_Color"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCommunityLike"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:icon="@drawable/favorite"
                    app:iconGravity="textEnd" />

                <TextView
                    android:id="@+id/textViewCommunityLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/Small_Text_Size" />

                <Button
                    android:id="@+id/buttonCommunityComment"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:icon="@drawable/comment"
                    app:iconGravity="textEnd" />

                <TextView
                    android:id="@+id/textViewCommunityComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/Small_Text_Size" />

                <Button
                    android:id="@+id/buttonCommunityView"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/black" />

                <TextView
                    android:id="@+id/textViewCommunityView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="3"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/Small_Text_Size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>