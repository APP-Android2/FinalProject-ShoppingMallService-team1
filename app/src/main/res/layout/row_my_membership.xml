<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/Side_Padding">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/InputCompartment_Color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/Side_Padding">

                <ImageView
                    android:id="@+id/imageViewMyMembership"
                    android:layout_width="110sp"
                    android:layout_height="110sp"
                    android:layout_gravity="center_vertical"
                    android:background="#FAF0FF"
                    android:src="@drawable/exercise" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRowMyCenterName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상호명"
                        android:textSize="@dimen/Big_Text_Size" />

                    <TextView
                        android:id="@+id/tvRowMyCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="과정 이름"
                        android:textSize="@dimen/Big_Text_Size" />

                    <TextView
                        android:id="@+id/tvRowMyRemainDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="남은 기간"
                        android:textSize="@dimen/Big_Text_Size" />

                    <Button
                        android:id="@+id/buttonMyMoreDays"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginTop="5sp"
                        android:backgroundTint="@color/Pup_Color"
                        android:text="연장하기"
                        android:textColor="@color/white"
                        android:textSize="@dimen/SmallButton_Text_Size" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>