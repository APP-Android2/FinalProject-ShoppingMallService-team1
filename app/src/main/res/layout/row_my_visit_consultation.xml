<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Side_Padding"
            android:layout_marginRight="@dimen/Up_Down_Margin"
            android:layout_marginBottom="@dimen/Up_Down_Margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/Side_Padding"
                android:paddingTop="@dimen/Up_Down_Margin"
                android:paddingRight="@dimen/Side_Padding"
                android:paddingBottom="@dimen/Up_Down_Margin">

                <TextView
                    android:id="@+id/tvRowMyVisitConsultationCenterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="운동 시설 이름"
                    android:textSize="@dimen/Big_Text_Size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRowMyVisitConsultationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="방문상담 예약 날짜" />

                <TextView
                    android:id="@+id/tvRowMyVisitConsultationTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:text="방문상담 예약 시간" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</layout>