<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/Side_Padding"
            android:layout_marginRight="@dimen/Side_Padding"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRowMyReviewTab2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="닉네임"
                    android:textSize="@dimen/Big_Text_Size" />

                <TextView
                    android:id="@+id/tvRowMyReviewTab2Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="날짜"
                    android:textSize="@dimen/Small_Text_Size" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/buttonDeleteTab2MyReview"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/Pup_Color"
                    android:text="삭제"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Chip_Text_Size"
                    app:chipCornerRadius="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1MyReviewTab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/star_fill" />

                <ImageView
                    android:id="@+id/star2MyReviewTab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/star_fill" />

                <ImageView
                    android:id="@+id/star3MyReviewTab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/star_fill" />

                <ImageView
                    android:id="@+id/star4MyReviewTab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/star_fill" />

                <ImageView
                    android:id="@+id/star5MyReviewTab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/star" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRowMyReviewTrainerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:text="트레이너명"
                android:textSize="@dimen/Big_Text_Size" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                app:cardBackgroundColor="@color/InputCompartment_Color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12sp">

                    <TextView
                        android:id="@+id/tvRowMyReviewTab2Contents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리뷰 내용"
                        android:textSize="@dimen/Medium_Text_Size" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/buttonEditTab2MyReview"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginBottom="@dimen/Up_Down_Margin"
                android:backgroundTint="@color/Pup_Color"
                android:text="리뷰 수정" />
        </LinearLayout>
    </LinearLayout>

</layout>