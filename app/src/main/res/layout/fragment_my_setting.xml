<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".fragment.MySettingFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarMySetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="설정"
                android:textSize="@dimen/Toolbar_Title_Size" />
        </com.google.android.material.appbar.MaterialToolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="8sp"
                    app:dividerColor="@color/Light_Purple_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Side_Padding"
                    android:layout_marginEnd="@dimen/Side_Padding"
                    android:orientation="horizontal">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/mySettingPushAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:clickable="true"
                        android:text="푸시 알림"
                        android:textSize="@dimen/Big_Text_Size"
                        app:trackTint="@color/Light_Purple_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textViewMySetting1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/Side_Padding"
                        android:layout_marginTop="12sp"
                        android:layout_marginEnd="@dimen/Side_Padding"
                        android:layout_marginBottom="12sp"
                        android:gravity="center_vertical"
                        android:text="서비스 이용약관"
                        android:textSize="@dimen/Big_Text_Size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textViewMySetting2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/Side_Padding"
                        android:layout_marginTop="12sp"
                        android:layout_marginEnd="@dimen/Side_Padding"
                        android:layout_marginBottom="12sp"
                        android:gravity="center_vertical"
                        android:text="위치기반 서비스 약관"
                        android:textSize="@dimen/Big_Text_Size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textViewMySetting3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/Side_Padding"
                        android:layout_marginTop="12sp"
                        android:layout_marginEnd="@dimen/Side_Padding"
                        android:layout_marginBottom="12sp"
                        android:gravity="center_vertical"
                        android:text="개인정보 처리방침"
                        android:textSize="@dimen/Big_Text_Size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textViewSettingVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/Side_Padding"
                        android:layout_marginTop="12sp"
                        android:layout_marginEnd="@dimen/Side_Padding"
                        android:layout_marginBottom="12sp"
                        android:gravity="center_vertical"
                        android:text="현재 버전 V1.0.0"
                        android:textSize="@dimen/Big_Text_Size" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>